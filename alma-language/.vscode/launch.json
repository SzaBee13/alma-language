{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run Alma File",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/alma_transpiler.py",
            "args": [
                "input.alma",  // Az alma fájl, amit futtatni szeretnél
                "output.js"    // A generált JavaScript fájl
            ],
            "runtimeExecutable": "python",
            "console": "integratedTerminal"
        }
    ]
}