{
    "name": "alma-language",
    "displayName": "Alma Language",
    "description": "A custom language for the Alma programming language.",
    "version": "1.2.1",
    "publisher": "SzaBee13",
    "engines": {
        "vscode": "^1.60.0"
    },
    "activationEvents": [
        "onLanguage:alma"
    ],
    "main": "./extension.js",
    "contributes": {
        "languages": [
            {
                "id": "alma",
                "aliases": [
                    "Alma"
                ],
                "extensions": [
                    ".alma"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./images/icon.png",
                    "dark": "./images/icon.png"
                }
            }
        ],
        "commands": [
            {
                "command": "alma.sayHello",
                "title": "Say Hello"
            }
        ],
        "grammars": [
            {
                "language": "alma",
                "scopeName": "source.alma",
                "path": "./syntaxes/alma.tmLanguage.json"
            }
        ],
        "debuggers": [
            {
                "type": "alma",
                "label": "Alma Debug",
                "runtime": "cmd",
                "runtimeArgs": [
                    "/c",
                    "alma ${file}"
                ],
                "languages": [
                    "alma"
                ]
            }
        ],
        "completionItemProvider": [
            {
                "language": "alma",
                "provideCompletionItems": "./src/commands.js"
            }
        ]
    },
    "icon": "images/icon.png",
    "devDependencies": {
        "vscode": "^1.78.0"
    }
}
