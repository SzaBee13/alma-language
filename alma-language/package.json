{
    "name": "alma-language",
    "displayName": "Alma Language",
    "description": "A custom extension for the Alma programming language.",
    "version": "1.2.4",
    "publisher": "SzaBee13",
    "categories": [
        "Debuggers",
        "Programming Languages"
    ],
    "engines": {
        "vscode": "^1.60.0"
    },
    "activationEvents": [
        "onLanguage:alma"
    ],
    "main": "./scr/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "alma",
                "aliases": [
                    "Alma"
                ],
                "extensions": [
                    ".alma"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./images/icon.png",
                    "dark": "./images/icon.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "alma",
                "scopeName": "source.alma",
                "path": "./syntaxes/alma.tmLanguage.json"
            }
        ],
        "debuggers": [
            {
                "type": "alma",
                "label": "Alma Debugger",
                "program": "./src/adapter.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "The program to debug."
                            }
                        }
                    }
                },
                "languages": [
                    "alma"
                ]
            }
        ],
        "completionItemProvider": [
            {
                "language": "alma",
                "provideCompletionItems": "./src/commands.js"
            }
        ]
    },
    "icon": ".images/icon.png",
    "devDependencies": {
        "vscode": "^1.1.37"
    },
    "dependencies": {
        "@vscode/debugadapter": "^1.68.0"
    }
}
